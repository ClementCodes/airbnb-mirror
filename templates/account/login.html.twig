{% extends 'base.html.twig' %}

{% block title %}Connexion au site
{% endblock %}


{% block body %}


	{# ici les deux variable dans le formulaire sont ger√© par symfony notamment name="_username" et _password #}

	<div class="container">
		<div class="row">
			<div class="col-md-3">&nbsp;</div>
			<div class="col-md-6">
				<div class="bg-light py-3 px-3"></div>
				<h1>Connectez vous !
					{% if choixErreur %}
						<div class="alert alert-danger">
							Une erruer est survenue le mot d epasse est invalide</div>
					{% endif %}

				</h1>
				<form action="{{path('account_login')}}" method="post">

					<div class="form-group">
						<label for="email">Email</label>
						<input type="text" name="_username" id="email" class="form-control" placeholder="email..." required value="{{userName}}">
					</div>
					<div class="form-group">
						<label for="password">Mot de passe</label>
						<input type="password" name="_password" id="password" class="form-control" placeholder="Mot de passe..." required>
					</div>
					<div class="form-group">

						<button type="submit" class="btn btn-success mt-3">Connexion  !</button>
					</div>
				</form>
			</div>
		</div>

	{% endblock %}
